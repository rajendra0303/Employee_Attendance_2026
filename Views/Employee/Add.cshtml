@model Employee_Attendance_2026.Models.EmployeeModel

<h2>Add New Employee</h2>

<form asp-action="Add" method="post">
    <div class="mb-2">
        <label>Name</label>
        <input asp-for="FullName" class="form-control" required />
    </div>

    <div class="mb-2">
        <label>Address</label>
        <input asp-for="Address" class="form-control" required />
    </div>

    <div class="mb-2">
        <label>Mobile</label>
        <input asp-for="Mobile" class="form-control" required />
    </div>

    <div class="mb-2">
        <label>Email</label>
        <input asp-for="Email" class="form-control" required />
    </div>

    <div class="mb-2">
        <label>Joining Date</label>
        <input asp-for="JoiningDate" type="date" class="form-control" required />
    </div>

    <div class="mb-2">
        <label>Group</label>
        <select asp-for="GroupName" class="form-control" required>
            <option value="">--Select Group--</option>
            <option>Developer</option>
            <option>Engineer</option>
            <option>Intern</option>
        </select>
    </div>

    <button class="btn btn-primary">Save</button>
</form>
